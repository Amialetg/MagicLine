<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_donations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left_card"
            android:paddingRight="@dimen/padding_left_card">

            <TextView
                style="@style/TopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_left_card"
                android:paddingBottom="@dimen/margin_programming"
                android:text="@string/magicLineTitle"
                android:textColor="@color/light_red" />

            <TextView
                style="@style/scheduleHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_programming"
                android:text="@string/donationText"
                android:textColor="@color/black" />

            <TextView
                style="@style/recaudats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textDonateCause"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton_not_pressed"
                    android:padding="@dimen/padding_left_card"
                    android:text="@string/particularText"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton_not_pressed"
                    android:padding="@dimen/padding_left_card"
                    android:text="@string/EntityText" />


            </LinearLayout>

            <EditText
                android:id="@+id/importEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/plainImport"
                android:autofillHints="@string/plainImport" tools:targetApi="o"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_not_pressed"
                android:padding="@dimen/padding_left_card"
                android:text="@string/importText"/>


            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintPlainName"
                android:inputType="textPersonName"
                android:autofillHints="string/hintPlainName" tools:targetApi="o"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_not_pressed"
                android:padding="@dimen/padding_left_card"
                android:text="@string/nameImportText"/>


        </LinearLayout>

</ScrollView>
