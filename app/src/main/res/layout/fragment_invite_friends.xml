<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inviteFriendsLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_appbar_top"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/msn_icon"
            android:drawablePadding="20dp"
            android:padding="25dp"
            android:text="@string/email"
            android:textColor="#4c4c4c"
            android:textSize="14sp"
            tools:text="E-mail" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lessGreyColor" />

        <TextView
            android:id="@+id/facebookTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/facebook_icon"
            android:drawablePadding="20dp"
            android:padding="25dp"
            android:text="@string/facebook"
            android:textColor="#4c4c4c"
            android:textSize="14sp"
            tools:text="Facebook" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lessGreyColor" />


        <TextView
            android:id="@+id/messengerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/messenger_icon"
            android:drawablePadding="20dp"
            android:padding="25dp"
            android:text="@string/messenger"
            android:textColor="#4c4c4c"
            android:textSize="14sp"
            tools:text="Messenger" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lessGreyColor" />

        <TextView
            android:id="@+id/telegramTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/telegram_icon"
            android:drawablePadding="20dp"
            android:padding="25dp"
            android:text="@string/telegram"
            android:textColor="#4c4c4c"
            android:textSize="14sp"
            tools:text="Telegram" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lessGreyColor" />

        <TextView
            android:id="@+id/whatsappTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/whats_icon"
            android:drawablePadding="20dp"
            android:padding="25dp"
            android:text="@string/whatsapp"
            android:textColor="#4c4c4c"
            android:textSize="14sp"
            tools:text="WhatsApp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lessGreyColor" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>