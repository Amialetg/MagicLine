<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgInviteFriends"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/countdown_background" />

            <ImageButton
                android:id="@+id/crossBtn"
                android:layout_width="@dimen/crossBtn"
                android:layout_height="@dimen/crossBtn"
                android:layout_margin="16dp"
                android:layout_gravity="top|start"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textViewHeader"
                style="@style/whiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/invite_friends" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/inviteBtnMargin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/inviteBtnImg"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inviteBtnImg"
                android:src="@drawable/msn_icon" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/socialNetwork"
                android:layout_gravity="center_vertical"
                android:text="@string/email" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/inviteBtnMargin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/inviteBtnImg"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inviteBtnImg"
                android:src="@drawable/facebook_icon" />

            <TextView
                android:id="@+id/fbTextView"
                style="@style/socialNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/facebook" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/inviteBtnMargin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inviteBtnImg"
                android:src="@drawable/messenger_icon" />

            <TextView
                android:id="@+id/msnTextView"
                style="@style/socialNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/messenger" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/inviteBtnMargin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inviteBtnImg"
                android:src="@drawable/telegram_icon" />

            <TextView
                android:id="@+id/telegramTextView"
                style="@style/socialNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/telegram" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/inviteBtnMargin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inviteBtnImg"
                android:src="@drawable/whats_icon" />

            <TextView
                android:id="@+id/whatsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/whatsapp"
                style="@style/socialNetwork" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

    </LinearLayout>


</ScrollView>
