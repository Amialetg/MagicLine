<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.voluntariat.android.magicline.activities.main.fragments.MoreInfoMLFragment">

    <include layout="@layout/toolbar_appbar_top"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_ml" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/infoML"
                    style="@style/walk_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/info_ml" />

                <TextView
                    android:id="@+id/walkTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    style="@style/walk_title"
                    android:text="@string/walk_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstWalkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/walk_text_1"
                    style="@style/walk_text"
                    android:layout_marginEnd="2dp"/>

                <TextView
                    android:id="@+id/SecondWalkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/walk_text_2"
                    style="@style/walk_text_bold"
                    android:layout_marginEnd="2dp"/>

            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/walk_text_3"
                    style="@style/walk_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/walk_text_4"
                    style="@style/walk_text_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_info_on"
                        android:layout_marginEnd="8dp"
                        style="@style/walk_text"/>

                    <TextView
                        android:id="@+id/viewOnWeb"
                        style="@style/ViewOnWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="@string/ml_sjd"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="15dp" />

                </LinearLayout>

            </LinearLayout>
            <include layout="@layout/layout_rrss" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
