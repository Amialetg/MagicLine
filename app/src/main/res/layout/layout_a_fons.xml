<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="19dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/afons_title"
        android:fontFamily="@font/lato_regular"
        style="@style/NewsTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:weightSum="3"
        android:layout_marginTop="19dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/info_essentials_button"
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:text="@string/mesque_dona"
                android:layout_weight="1"
                app:cardCornerRadius="7.2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="18dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:id="@+id/afons_imprescindibles_img"
                        android:src="@drawable/ic_imprescindibles_afons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/afons_imprescindibles"
                        style="@style/afons_cards_txt"
                        />


                </LinearLayout>
                
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/info_donations_destiny_button"
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:text="@string/mesque_dona"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="7.2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="18dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:id="@+id/afons_desti"
                        android:src="@drawable/ic_desti_afons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/donations_title"
                        style="@style/afons_cards_txt" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/info_sjd_button"
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:text="@string/mesque_dona"
                android:layout_weight="1"
                app:cardCornerRadius="7.2dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:id="@+id/afons_sj"
                        android:src="@drawable/ic_sj_afons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sjd_title"
                        style="@style/afons_cards_txt"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>