<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="@drawable/mes_que_border"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mesque_title"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/grey"
        style="@style/NewsTitle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="19dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_mes_que_not_pressed"
                android:text="@string/mesque_dona"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/grey"
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_mes_que_not_pressed"
                android:text="@string/mesque_demana"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/grey"
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_mes_que_not_pressed"
                android:text="@string/mesque_idees"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/grey"
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>