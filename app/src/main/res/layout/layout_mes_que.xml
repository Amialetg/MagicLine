<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_layout"
    android:background="@drawable/mes_que_border"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="@dimen/back_arrow_width"
    android:paddingBottom="@dimen/back_arrow_height">

    <TextView
        style="@style/NewsTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/letters_height"
        android:fontFamily="@font/lato_regular"
        android:text="@string/mesque_title"
        android:textColor="@color/grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/end_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/end_margin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDonateTeam"
            style="@style/btn_mes_que"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_marginStart="@dimen/margin_top_text"
            android:layout_marginEnd="@dimen/margin_top_text"
            android:layout_weight="1"
            android:background="@drawable/btn_mes_que_not_pressed"
            android:text="@string/mesque_dona" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRequestDonates"
            style="@style/btn_mes_que"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_marginStart="@dimen/margin_top_text"
            android:layout_marginEnd="@dimen/margin_top_text"
            android:layout_weight="1"
            android:background="@drawable/btn_mes_que_not_pressed"
            android:text="@string/mesque_demana" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBrainStorm"
            style="@style/btn_mes_que"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_marginStart="@dimen/margin_top_text"
            android:layout_marginEnd="@dimen/margin_top_text"
            android:layout_weight="1"
            android:background="@drawable/btn_mes_que_not_pressed"
            android:text="@string/mesque_idees" />

    </LinearLayout>

</LinearLayout>