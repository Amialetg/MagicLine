<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_title_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/news_title"
                style="@style/NewsTitle"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <RelativeLayout
                android:layout_width="@dimen/news_arrow_box_width"
                android:layout_height="@dimen/news_item_height"
                android:layout_weight="3"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/left_arrow_relative"
                >

                <ImageView
                    android:layout_width="@dimen/news_arrow_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_news_left_arrow"
                    android:id="@+id/news_left_arrow"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/news_recycler_width"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                >

                <android.support.v7.widget.RecyclerView
                    android:layout_width="@dimen/news_recycler_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_recycler"
                    >
                </android.support.v7.widget.RecyclerView>

                <com.kingfisher.easyviewindicator.RecyclerViewIndicator
                    android:id="@+id/news_pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:avi_animation_enable="false"
                    app:avi_drawable="@drawable/circle_selected_pager_indicator"
                    app:avi_drawable_unselected="@drawable/circle_unselected_pager_indicator"
                    app:avi_height="10dp"
                    app:avi_margin="@dimen/news_margin_indicator"
                    app:avi_width="10dp"
                    android:layout_below="@id/news_recycler"
                    android:layout_marginVertical="16dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_weight="3"
                android:layout_width="@dimen/news_arrow_box_width"
                android:layout_height="@dimen/news_item_height"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/right_arrow_relative"
                >

                <ImageView
                    android:layout_width="@dimen/news_arrow_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_news_right_arrow"
                    android:id="@+id/news_right_arrow"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>