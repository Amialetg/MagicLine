<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <TextView
        style="@style/NewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_top_values"
        android:text="@string/other_values_title"
        android:letterSpacing="0.13"
        android:textColor="#000000"
        android:textSize="16sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/margin_bottom_values"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/info_global_button"
                android:layout_width="@dimen/width_card_value"
                android:layout_height="@dimen/height_card_value"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"

                >
                <ImageView
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="42dp"
                    android:src="@drawable/fill_3"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:gravity="center_horizontal"
                    android:text="@string/OValues1"
                    android:textSize="11sp"
                    />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/info_donations_destiny_button"
                android:layout_width="@dimen/width_card_value"
                android:layout_height="@dimen/height_card_value"
                android:layout_weight="1"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="41dp"
                    android:src="@drawable/fill_2"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:gravity="center_horizontal"
                    android:text="@string/OValues2"
                    android:textSize="11sp"
                    android:paddingHorizontal="15dp"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/info_sjd_button"
                android:layout_width="@dimen/width_card_value"
                android:layout_height="@dimen/height_card_value"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:elevation="12dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="13dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/fill_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:gravity="center_horizontal"
                    android:text="@string/OValues3"
                    android:textSize="11sp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>