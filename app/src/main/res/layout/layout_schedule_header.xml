<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/schedule_header_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/crossBtn"
        android:paddingTop="@dimen/marginMoreInfo"
        android:paddingBottom="@dimen/marginMoreInfo">

        <TextView
            style="@style/ShareML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule_header_name"
            android:textAlignment="textStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/RedItalicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_alldayopen_act" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lato_blackitalic"
                android:text="@string/schedule_header_total_duration"
                android:textColor="@color/schedule_header_subtitle"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_light"
            android:paddingEnd="@dimen/crossBtn"
            android:text="@string/arraySubtitleTwo"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_fer_donacio_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/startTextView"
            android:paddingEnd="@dimen/back_arrow_width"
            android:text="@string/schedule_title"
            android:textAllCaps="true"
            android:textColor="@color/schedule_header_bg"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:alpha="0.32"
        />
</LinearLayout>