<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/news_arrow_width"
    android:layout_marginStart="@dimen/news_arrow_width"
    android:layout_marginEnd="@dimen/news_arrow_width">

        <TextView
            android:id="@+id/shareText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            style="@style/ShareExp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <ImageButton
                android:id="@+id/fb_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_fb"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/insta_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_insta"
                android:background="@null"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                />

            <ImageButton
                android:id="@+id/twitter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_twitter"
                android:background="@null" />

        </LinearLayout>

</LinearLayout>