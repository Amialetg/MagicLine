<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:layout_weight="43.2">

        <TextView
            android:id="@+id/shareText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:layout_marginTop="20dp"
            style="@style/Share" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@id/shareText">

            <ImageButton
                android:id="@+id/fb_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/share_fb"
                app:layout_constraintTop_toBottomOf="@+id/shareText"
                app:layout_constraintRight_toLeftOf="@+id/insta_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/insta_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/share_insta"
                app:layout_constraintTop_toBottomOf="@+id/shareText"
                app:layout_constraintLeft_toRightOf="@id/fb_button"
                app:layout_constraintRight_toLeftOf="@id/twitter_button"
                android:background="@null"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                />

            <ImageButton
                android:id="@+id/twitter_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/share_twitter"
                android:background="@null"
                app:layout_constraintLeft_toRightOf="@id/insta_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareText" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>